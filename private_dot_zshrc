if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
    source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

source /usr/share/zsh-theme-powerlevel10k/powerlevel10k.zsh-theme

# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"

plugins=(
    git
    nvm
    zsh-autosuggestions
    colored-man-pages
    sudo
    asdf
    ruby
    rvm
    rake
    gem
    docker
    zsh-bat
    zsh-syntax-highlighting
)

source $ZSH/oh-my-zsh.sh

# Preferred editor for local and remote sessions
if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR='nvim'
else
  export EDITOR='nvim'
fi

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

alias dcd="docker compose down"
alias dcu="docker compose up"
alias dcud="dcu -d"
alias dcdu="dcd && dcud"
alias dcl="docker compose logs"
alias dclf="dcl -f"
alias dcul="dcud && dclf"
alias dcdul="dcd && dcul"

alias dce="docker compose exec"
alias dceweb="dce web"

alias psyu="sudo pacman -Syyu"

alias ls=exa
alias la='ll -a'

alias cat='bat --paging=never'

alias vim='nvim'

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm

_add_before_path() {
    export PATH="$1:$PATH"
}

_add_after_path() {
    export PATH="$PATH:$1"
}

export PATH="$PATH:$HOME/.symfony5/bin"
export PATH="$PATH:/usr/local/go/bin"
export PATH="$PATH:$HOME/packages/julia-1.10.0/bin"
export PATH="$PATH:$HOME/.config/rofi/scripts"
export PATH="$PATH:$HOME/.cargo/bin"
export PATH="$PATH:$HOME/.bin"
export PATH="$PATH:$HOME/.local/bin"
export PATH="$PATH:$HOME/.config/composer/vendor/bin"
_add_after_path "$(go env GOPATH)/bin"

alias s="kitten ssh"
eval "$(atuin init zsh --disable-up-arrow)"

GPG_TTY=$(tty)
export GPG_TTY

eval "$(navi widget zsh)"
eval "$(register-python-argcomplete pipx)"

if command -v zoxide > /dev/null; then
  eval "$(zoxide init zsh)"
fi

